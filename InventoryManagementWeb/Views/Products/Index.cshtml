@model IEnumerable<InventoryManagementWeb.Models.Product>

<h1>Products List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Stock Level</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.StockLevel</td>
            </tr>
        }
    </tbody>
</table>
