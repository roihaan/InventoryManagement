@model InventoryManagementWeb.Models.Product


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Product</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 20px;
        }

        .card {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .product-detail p {
            margin-bottom: 5px;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center mb-4">Product Details</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Product ID:</strong> @Model.ProductId</p>
                        <p><strong>Name:</strong> @Model.Name</p>
                        <p><strong>Stock Level:</strong> @Model.StockLevel</p>
                    </div>
                    <div class="col-md-6 text-md-right">
                        <div class="text-center mt-4">
                            <a href="@Url.Action("Index", "Products")" class="btn btn-primary">Back to Products</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+WBV5k+3pv2h+8pFqWForQj5Rb6JNE1kLQ+qF02Y3Jl4+3h" crossorigin="anonymous"></script>
</body>
</html>
